@model DetailCommentDto
@{
    ViewData["Title"] = $"{Model.CreatedByName} Yorumunu Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card radius-15">
    <div class="card-body">
        <div class="card-title">
            <h4 class="mb-0">@Model.CreatedByName İsimli Kişinin Yorumu</h4>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>İsim</label>
                    <input type="text" class="form-control input-rounded" asp-for="CreatedByName" placeholder="İsim" readonly>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Makale</label>
                    <input type="text" class="form-control input-rounded" asp-for="ArticleTitle" placeholder="Makale" readonly>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="text" class="form-control input-rounded" asp-for="CreatedDate" placeholder="Tarih" readonly>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Yorum</label>
            <textarea class="form-control" placeholder="Yorum" asp-for="Text" readonly rows="15"></textarea>
        </div>

        <hr />        
        <h4 id="replyCommentTitle">Alt Yorumlar</h4>
        <div id="replyCommentDiv">            
            <div class="table-responsive">
                <div id="spinner-data" style="display:none" class="text-center">
                    <button class="btn btn-light" type="button" disabled="" id="spinnerButton">
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        Yükleniyor...
                    </button>
                </div>
                <table id="replyComment-table" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Yorum Yapılan</th>
                            <th>Yorum Yapan</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>


        <div class="form-group">
            <a class="btn mb-1 btn-rounded btn-info" href="/Admin/Yorumlar/">Geri Dön</a>
        </div>
    </div>
</div>


@section Css {
    <link href="~/admin/assets/plugins/toastr/css/toastr.min.css" rel="stylesheet" />
    <link href="~/admin/assets/plugins/datatbs/css/datatables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/admin/assets/plugins/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/admin/assets/plugins/datatables/js/jquery.datatables.min.js"></script>
    <script src="~/admin/assets/plugins/toastr/js/toastr.min.js"></script>
    <script src="~/admin/js/comment/detailComment.js"></script>
    <script src="~/admin/assets/plugins/sweetalert2/dist/sweetalert2.min.js"></script>
    <script src="~/admin/assets/plugins/moment/moment.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/locale/tr.min.js"></script>
}