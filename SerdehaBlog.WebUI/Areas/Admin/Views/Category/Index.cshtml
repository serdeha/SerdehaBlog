@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <div class="row">
                <div class="col-md-11">
                    <h4 class="mb-0">Kategoriler</h4>
                </div>
                <div class="col-md-1">
                    <a class="btn btn-success btn-block text-white" asp-controller="Category" asp-action="Add" asp-area="Admin">
                        <i class="fa fa-plus"></i> Ekle
                    </a>
                </div>
            </div>
        </div>
        <hr />
        <div class="table-responsive">
            <div id="spinner-data" style="display:none" class="text-center">
                <button class="btn btn-light" type="button" disabled="" id="spinnerButton">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Yükleniyor...
                </button>
            </div>
            <table id="category-table" class="table table-striped table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Makale Sayısı</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>


@section Css {
    <link href="~/admin/assets/plugins/toastr/css/toastr.min.css" rel="stylesheet" />
    <link href="~/admin/assets/plugins/datatbs/css/datatables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/admin/assets/plugins/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/admin/assets/plugins/datatables/js/jquery.datatables.min.js"></script>
    <script src="~/admin/assets/plugins/toastr/js/toastr.min.js"></script>
    <script src="~/admin/js/category/category.js"></script>
    <script src="~/admin/assets/plugins/sweetalert2/dist/sweetalert2.min.js"></script>
}

