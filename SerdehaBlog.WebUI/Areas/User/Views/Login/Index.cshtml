@model LoginViewModel

@{
	ViewData["Title"] = "Giriş Yap";
	Layout = "~/Areas/User/Views/Shared/_AdminLayout.cshtml";
}

<div class="login-form-bg h-100">
	<div class="container h-100">
		<div class="row justify-content-center h-100">
			<div class="col-xl-6">
				<div class="form-input-content">
					<div class="card login-form mb-0">
						<div class="card-body pt-5">
							<a class="text-center" asp-controller="Home" asp-action="Index" asp-area="Admin"> <h4>Serdeha Blog Admin Girişi</h4></a>

							<form class="mt-5 mb-5 login-input" asp-controller="Login" asp-action="Index" asp-area="User">
								@if (ViewData.ModelState.ErrorCount > 0)
								{
									<div class="alert alert-primary" role="alert" asp-validation-summary="All"></div>
								}

								<div class="form-group mt-4">
									<input asp-for="Username" type="text" class="form-control" placeholder="Kullanıcı adınız" />
								</div>

								<div class="form-group">
									<input asp-for="Password" type="password" class="form-control" placeholder="Şifreniz" />
								</div>

								<div class="form-group">
									<div class="form-check mb-3">
										<label class="form-check-label">
											<input type="checkbox" class="form-check-input" asp-for="RememberMe"> Beni Hatırla
										</label>
									</div>
								</div>

								<button type="submit" class="btn login-form__btn submit w-100">Giriş Yap</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>