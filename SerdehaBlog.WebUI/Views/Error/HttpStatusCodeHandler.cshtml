@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.StatusCode</title>
    <link href="~/frontEnd/css/error.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/blog/css/bootstrap.min.css" type="text/css" media="all">
</head>
<body>

    <section class="page_404">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 ">
                    <div class="col-sm-10 col-sm-offset-1  text-center">
                        <div class="four_zero_four_bg">
                            <h1 class="text-center ">@ViewBag.StatusCode</h1>


                        </div>

                        <div class="contant_box_404">
                            <h3 class="h2">
                                @ViewBag.ErrorMessage
                            </h3>

                            <a asp-controller="Blog" asp-action="Index" asp-area="" class="link_404">Anasayfa'ya Dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/blog/js/bootstrap.min.js"></script>

</body>
</html>

