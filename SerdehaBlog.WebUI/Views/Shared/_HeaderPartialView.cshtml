<header class="header-classic">

    <div class="container-xl">
        <!-- header top -->
        <div class="header-top">
            <div class="row align-items-center">

                <div class="col-md-4 col-xs-12">
                    <!-- site logo -->
                    <a class="navbar-brand" asp-controller="Blog" asp-action="Index" asp-area=""><img src="~/blog/images/logo.svg" alt="Serdeha Blog" /></a>
                </div>

                <div class="col-md-8 d-none d-md-block">
                    <!-- social icons -->
                    <ul class="social-icons list-unstyled list-inline mb-0 float-end">
                        @await Component.InvokeAsync("SocialMedia")
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg">
        <!-- header bottom -->
        <div class="header-bottom  w-100">

            <div class="container-xl">
                <div class="d-flex align-items-center">
                    <div class="collapse navbar-collapse flex-grow-1">
                        <!-- menus -->
                        <ul class="navbar-nav">
                            <li class="nav-item @Html.IsActive("Blog","Index")">
                                <a class="nav-link" asp-controller="Blog" asp-action="Index" asp-area="">Anasayfa</a>
                            </li>
                            <li class="nav-item @Html.IsActive("About","Index")">
                                <a class="nav-link" href="/Hakkimda/">Hakkımda</a>
                            </li>
                            <li class="nav-item @Html.IsActive("Contact","Index")">
                                <a class="nav-link" href="/Iletisim/">İletişim</a>
                            </li>                            
                        </ul>
                    </div>

                    <!-- header buttons -->
                    <div class="header-buttons">
                        <button class="search icon-button">
                            <i class="icon-magnifier"></i>
                        </button>
                        <button class="burger-menu icon-button ms-2 float-end float-lg-none">
                            <span class="burger-icon"></span>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </nav>

</header>